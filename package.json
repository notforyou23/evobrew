{
  "name": "evobrew",
  "version": "1.0.0",
  "description": "Model-agnostic AI workspace with semantic knowledge graphs, function calling, and persistent memory",
  "main": "server/server.js",
  "bin": {
    "evobrew": "./bin/evobrew"
  },
  "files": [
    "bin/",
    "lib/",
    "server/",
    "public/",
    "prisma/",
    ".env.example"
  ],
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "import-oauth": "node import-oauth.js",
    "import-token": "node import-oauth-token.js",
    "security:validate-internet": "node scripts/validate-internet-config.js",
    "security:test": "node scripts/security-smoke.js",
    "security:release": "bash scripts/security-release.sh",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags",
    "postinstall": "node -e \"console.log('\\nðŸ§ª Evobrew installed! Run: evobrew setup\\n')\""
  },
  "keywords": [
    "ai",
    "workspace",
    "ide",
    "knowledge-graph",
    "semantic-search",
    "claude",
    "gpt-4",
    "openai",
    "anthropic",
    "xai",
    "grok",
    "function-calling",
    "llm"
  ],
  "author": "jtr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/notforyou23/evobrew.git"
  },
  "homepage": "https://evobrew.ai",
  "bugs": {
    "url": "https://github.com/notforyou23/evobrew/issues"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@prisma/client": "^5.0.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "hnswlib-node": "^3.0.0",
    "mammoth": "^1.6.0",
    "msgreader": "^1.0.1",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.1.0",
    "openai": "^4.20.0",
    "ws": "^8.19.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.0.0"
  },
  "overrides": {
    "qs": "^6.14.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
